#! /usr/bin/bash
CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-drop"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"

echo "dropping the db"
# sudo -u postgres psql -c "DROP DATABASE cruddur;"

sudo psql postgres://postgres:postgress@cruddur-db-instance.chupgxpbfimi.eu-west-2.rds.amazonaws.com:5432 -c "DROP DATABASE cruddur WITH (FORCE);"
